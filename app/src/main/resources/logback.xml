<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} MDC=%X{user} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--
    LogMgr is used to emit logs that are referenced by external systems eg log monitoring.
    Do not disable this class.
     -->
    <logger name="com.example.dataprocessingexperiment.app.LogMgr" level="TRACE" />


    <logger name="org" level="WARN" />

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
